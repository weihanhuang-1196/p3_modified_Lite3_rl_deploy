{
    "configurations": [
        {
            "name": "ROS 2 Humble",
            "includePath": [
                // 您的项目路径
                "${workspaceFolder}/src/rl_sar/include/**",
                "${workspaceFolder}/src/**/include/**",
                "${workspaceFolder}/install/rl_sar/include/**",
                
                // ROS 2 路径
                "/opt/ros/humble/include/**",
                
                // 系统标准库路径（关键修复）
                "/usr/include/**",
                "/usr/include/c++/11/**",
                "/usr/include/x86_64-linux-gnu/**",
                // "/usr/include/c++/11/x86_64-linux-gnu/**",
                "/usr/lib/gcc/x86_64-linux-gnu/11/include/**",
                
                // 其他常用路径
                "/usr/local/include/**"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "gnu17",
            "cppStandard": "gnu++17",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}